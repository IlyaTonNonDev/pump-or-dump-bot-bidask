TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_STARS_PROVIDER_TOKEN=your_stars_provider_token_here

# Shop Configuration
# FREE_SHOP_MODE=true - бесплатный тестовый режим (товары выдаются без оплаты Stars)
# FREE_SHOP_MODE=false или не установлено - обычный режим с оплатой Stars
FREE_SHOP_MODE=false

# Transaction Configuration
# DISABLE_TRANSACTIONS=true - блокировка транзакций на выкуп/продажу TONDEV (тестовый режим)
# DISABLE_TRANSACTIONS=false или не установлено - транзакции включены (продакшн режим)
DISABLE_TRANSACTIONS=false

TON_API_KEY=your_ton_api_key_here

# Wallet Configuration
# ВАЖНО: Seed фраза должна быть зашифрована перед добавлением в этот файл
# Используйте функцию encryptSeedPhrase() для шифрования вашей seed фразы
ENCRYPTED_WALLET_SEED=your_encrypted_seed_phrase_here

# Encryption Configuration
# Эти ключи используются для шифрования/дешифрования seed фразы
# Сгенерируйте безопасные ключи: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
ENCRYPTION_IV=your_16_byte_hex_iv_here

# Purchase Configuration
BUY_AMOUNT_TON=1

